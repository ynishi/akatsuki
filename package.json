{
  "name": "akatsuki",
  "private": true,
  "description": "VITE+Supabase+Shuttle「Akatsuki」高速開発テンプレート",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preview:frontend": "npm run preview --workspace=app-frontend",
    "vibe:check": "npm run lint:vibe --workspace=app-frontend && akatsuki build frontend",
    "check:backend": "cd packages/app-backend && cargo check",
    "test:backend": "cd packages/app-backend && cargo test",
    "deploy:backend": "cd packages/app-backend && cargo shuttle deploy",
    "setup": "node scripts/setup.js",
    "setup:check": "akatsuki setup check",
    "workspace:publish": "node scripts/workspace-publish.js"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0"
  }
}
